---
layout: layouts/html.njk
templateClass: tmpl-salt
---
<article itemtype="https://schema.org/BlogPosting">
  <img src="{{ post.imgSrc | url }}" alt"{{ post.imgAlt }}"/>
  {% if post.authorDisplay %}
    <span itemprop="author">
      <p>
        <img src="{{ post.authorImgSrc | url }}?h=64" alt="{{ post.authorImg.alt }}"/>
        Written by: {{ post.author }}
      </p>
    </span>
  {% endif %}
  <h1 itemprop="title">{{ post.title }}</h1>
  {{ post.body | markdownify | safe }}
  <p>Published: <time datetime="{{ post.publishedAt }}" itemprop="datePublished">{{ post.publishedAt|readableDate }}</time></p>
  <p><a href="{{ '/' + post.blogId + '/' | url }}">‚Üê Home</a></p>
</article>
